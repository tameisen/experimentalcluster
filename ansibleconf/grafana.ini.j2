[server]
http_addr = {{ ansible_host }}
http_port = 3000
root_url = %(protocol)s://%(domain)s:3000/
enable_gzip = true
domain = {{ ansible_host }}

[database]
type = sqlite3
path = grafana.db

[security]
admin_user = admin
admin_password = admin

[users]
allow_sign_up = false

[dataproxy]
timeout = 30

[log]
mode = console
level = info

[datasources]

[dashboard]
install_default_dashboards = false

[provisioning]
  [provisioning.datasources]
  path = /etc/grafana/provisioning/datasources
  enabled = true

  [provisioning.dashboards]
  path = /etc/grafana/provisioning/dashboards
  enabled = true
